@model List<KitapTuru>

@if(TempData["basarili"] != null)
{
  <h2>@TempData["basarili"]</h2>
}

<div class="container">

    <div class="row pt-3 pb-4">
        <div>
            <h1>Kitap Turleri </h1>
        </div>
    </div>
    
<table class="table table-bordered">
    <thead>
    <tr>
        <th>
            Id
        </th>
        <th>
            Kitap Turu
        </th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var kitapTuru in Model)
    {
        <tr>
            <td>@kitapTuru.Id</td>
            <td>@kitapTuru.Ad</td>
            <td>
                <a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-success" style="width:250px">Guncelle</a>
            </td>
            <td>
                <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-danger" style="width:250px">Sil</a>
            </td>
        </tr>
        
        
    }
    </tbody>
    
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Kitap Turu Olustur
            </a>
        </div>
        
        
    
    
    </div>


</table>

</div>
